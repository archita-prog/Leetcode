class Solution {
public:
    int findLHS(vector<int>& nums) {
        unordered_map<int, int> freq;
        for(int x: nums){
            freq[x]++;
        }
        int maxLen =0;

        for(auto const& [num, count] : freq){
            if(freq.count(num+1)){
                maxLen = max(maxLen, count + freq[num+1]);
            }
        }
        return maxLen;
        
    }
};
