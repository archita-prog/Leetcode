class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        unordered_map<int, int> map;
        int maxLen =0;
        for(int num : nums){
            if(!map[num]){
                map[num] = map[num-1] + map[num+1]+1;
                map[num-map[num-1]] = map[num];
                map[num+map[num+1]] = map[num];
                maxLen = max(maxLen, map[num]);
            }
        }
        return maxLen;
    }
};
