class Solution {
public:
    int bagOfTokensScore(vector<int>& tokens, int power) {
        sort(tokens.begin(), tokens.end());

        int left = 0;
        int right = tokens.size()-1;

        int score  = 0;
        int maxScore = 0;

        while(left <= right){
            if(power >= tokens[left]){
                //play token face -up
                power -= tokens[left];
                score++;
                left++;
                maxScore = max(maxScore, score);
            }
            else if(score >= 1){
                power += tokens[right];
                score--;
                right--;
            }
            else{
                break;
            }
        }
        return maxScore;
        
    }
};
