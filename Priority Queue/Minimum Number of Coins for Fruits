class Solution {
public:
    int minimumCoins(vector<int>& prices) {
        int n = prices.size();
        vector<int>dp(n+1,INT_MAX);
        dp[n] = 0;

        for(int i = n-1; i >=0; i--){
            int minNext =INT_MAX;

            for(int j =i + 1; j<= min(n,i+i+2); j++){
                minNext = min(minNext, dp[j]);
            }
            dp[i] = prices[i] + minNext;
        }
        return dp[0];
        
    }
};
