class Solution {
public:
    string minRemoveToMakeValid(string s) {
        stack<int> stk;
        unordered_set<int> indexesToRemove;
        for (int i = 0; i<s.length(); i++){
            if(s[i] == '('){
                stk.push(i);
            }
            else if(s[i] == ')'){
                if(!stk.empty()){
                    stk.pop();
                }
                else{
                    indexesToRemove.insert(i);
                }
            }
        }
        while(!stk.empty()){
            indexesToRemove.insert(stk.top());
            stk.pop();
        }
        string res = "";
        for(int i = 0; i<s.length();i++){
            if (indexesToRemove.find(i) == indexesToRemove.end()){
                res +=s[i];

            }
        }
        return res ;
    }
};
